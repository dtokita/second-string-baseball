<div class="ui container">
  <table class="ui compact table">
    <thead>
      <tr>
        <th>Jersey Number</th>
        <th>Name</th>
        <th>Throws</th>
        <th>Bats</th>
      </tr>
    </thead>
    
    <tbody>
      <% Player.order(:jersey_number).each do |player| %>
        <tr>
          <td><%= player.jersey_number %></td>
          <td><a href="/statistics/player?player_id=<%= player.id %>"><%= player.name %></a></td>
          <td><%= player.throws %></td>
          <td><%= player.bats %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
